}

логический ЗадатьПятыйВопрос() {
    вывести << "(5) Когда Факультет отстоял свое право оставаться независимым отдельным факультетом (Когда на ФКН празднуется"
    " День независимости)?\n";
    вывести << "1) 8 июня\n";
    вывести << "2) 4 июля\n";
    вывести << "3) 1 апреля\n";
    вывести << "4) 31 декабря\n\n";
    вывести << "Ваш ответ: ";
    целый ответ = ПолучитьОтвет();
    если(ответ == 1) {
        вывести << "Это верный ответ!\n\n";
