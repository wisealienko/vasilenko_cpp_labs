#define если if
#define иначе else
#define использовать using
#define пространствоимён namespace
#define стд std
#define главная main
#define ЛК_ВСЕ LC_ALL
#define вернуть return
#define вывести cout
#define ввести cin
#define правда true
#define ложь false
#define пока while

#include <iostream>
#include <cstdio>
использовать пространствоимён стд;

void УстановитьРусский() {
    setlocale(LC_ALL, "Russian");
}

void Почистить() {
    return cin.clear();
}

void Проигнорировать() {
    cin.ignore(32767, '\n');
}

int typedef целый;
void typedef пустой;
char typedef символьный;
bool typedef логический;




пустой ПровестиТест();
целый ПолучитьОтвет();
логический ЗадатьПервыйВопрос();
логический ЗадатьВторойВопрос();
логический ЗадатьТретийВопрос();
логический ЗадатьЧетвёртыйВопрос();
логический ЗадатьПятыйВопрос();
логический ЗадатьШестойВопрос();
логический ЗадатьСедьмойВопрос();
логический ЗадатьВосьмойВопрос();
логический ЗадатьДевятыйВопрос();
логический ЗадатьДесятыйВопрос();

целый главная()
{
    УстановитьРусский();

    вывести << "Эта программа узнает, насколько хорошо вы знаете о Факультет компьютерных наук.\n\n";

    ПровестиТест();

    вернуть 0;
}

пустой ПровестиТест() {
    целый количествоВерныхОтветов = 0;
    логический ответВерный;

    ответВерный = ЗадатьПервыйВопрос();
    если (ответВерный) {
        количествоВерныхОтветов++;
    }

    ответВерный = ЗадатьВторойВопрос();
    если (ответВерный) {
        количествоВерныхОтветов++;
    }
    ответВерный = ЗадатьТретийВопрос();
    если (ответВерный) {
        количествоВерныхОтветов++;
    }

    ответВерный = ЗадатьЧетвёртыйВопрос();
    если (ответВерный) {
        количествоВерныхОтветов++;
    }

    ответВерный = ЗадатьПятыйВопрос();
    если (ответВерный) {
        количествоВерныхОтветов++;
    }

    ответВерный = ЗадатьШестойВопрос();
    если (ответВерный) {
        количествоВерныхОтветов++;
    }

    ответВерный = ЗадатьСедьмойВопрос();
    если (ответВерный) {
        количествоВерныхОтветов++;
    }

    ответВерный = ЗадатьВосьмойВопрос();
    если (ответВерный) {
        количествоВерныхОтветов++;
    }

    ответВерный = ЗадатьДевятыйВопрос();
    если (ответВерный) {
        количествоВерныхОтветов++;
    }

    ответВерный = ЗадатьДесятыйВопрос();
    если (ответВерный) {
        количествоВерныхОтветов++;
    }

    если (количествоВерныхОтветов == 1) {
        вывести << "Вы ответили правильно на " << количествоВерныхОтветов << " вопрос из 10\n";
    }
    если ((количествоВерныхОтветов == 2) || (количествоВерныхОтветов == 3) || (количествоВерныхОтветов == 4))  {
        вывести << "Вы ответили правильно на " << количествоВерныхОтветов << " вопроса из 10\n";
    }
    если((количествоВерныхОтветов == 0) || ((количествоВерныхОтветов >= 5) && (количествоВерныхОтветов <= 10))) {
        вывести << "Вы ответили правильно на " << количествоВерныхОтветов << " вопросов из 10\n";
    }

    если (количествоВерныхОтветов == 0) {
        вывести << "Вы совсем не знаете факультет компьютерных наук.\n";
    }
    если ((количествоВерныхОтветов >= 1) && (количествоВерныхОтветов <= 3)) {
        вывести << "Вы очень мало знаете о факультете компьютерных наук.\n";
    }
    если ((количествоВерныхОтветов >= 4) && (количествоВерныхОтветов <= 7)) {
        вывести << "Вы знаете факультет компьютерных наук, но не так хорошо.\n";
    }
    если((количествоВерныхОтветов >= 8) && (количествоВерныхОтветов <= 9)) {
        вывести << "Вы хорошо знаете факультет компьютерных наук.\n";
    }
    если (количествоВерныхОтветов == 10) {
        вывести << "Вы знаете о факультете компьютерных наук всё.\n";
    }
}

целый ПолучитьОтвет() {
    логический ответНеверный = правда;
    пока(ответНеверный) {
        целый ответ;
        ввести >> ответ;
        ответНеверный = ((ответ != 1) && (ответ != 2) && (ответ != 3) && (ответ != 4));
        если (ответНеверный) {
            Почистить();
            Проигнорировать();
            вывести << "Ошибка: вы должны ввести 1, 2, 3 или 4.\n";
            вывести << "Ваш ответ: \n";
        } иначе {
            вернуть ответ;
        }
    }
    вернуть 0;
}

логический ЗадатьПервыйВопрос() {
    вывести << "(1) В каком году основан Факультет?\n";
    вывести << "1) 1999\n";
    вывести << "2) 2005\n";
    вывести << "3) 2003\n";
    вывести << "4) 1995\n\n";
    вывести << "Ваш ответ: ";
    целый ответ = ПолучитьОтвет();
    если(ответ == 3) {
        вывести << "Это верный ответ!\n\n";
        вернуть правда;
    } иначе{
        вывести << "Ответ неверный.\n\n";
        вернуть ложь;
    }
}

логический ЗадатьВторойВопрос() {
    вывести << "(2) Как фамилия Декана ФКН?\n";
    вывести << "1) Путин\n";
    вывести << "2) Иванов\n";
    вывести << "3) Смирнов\n";
    вывести << "4) Гуц\n\n";
    вывести << "Ваш ответ: ";
    целый ответ = ПолучитьОтвет();
    если(ответ == 4) {
        вывести << "Это верный ответ!\n\n";
        вернуть правда;
    } иначе{
        вывести << "Ответ неверный.\n\n";
        вернуть ложь;
    }
}

логический ЗадатьТретийВопрос() {
    вывести << "(3) Адрес корпуса ФКН?\n";
    вывести << "1) Красная площадь, дом 1\n";
    вывести << "2) улица Грозненская, дом 11,\n";
    вывести << "3) улица Ленина, дом 3\n";
    вывести << "4) улица Музейная, дом 4\n\n";
    вывести << "Ваш ответ: ";
    целый ответ = ПолучитьОтвет();
    если(ответ == 2) {
        вывести << "Это верный ответ!\n\n";
        вернуть правда;
    } иначе{
        вывести << "Ответ неверный.\n\n";
        вернуть ложь;
    }
}

логический ЗадатьЧетвёртыйВопрос() {
    вывести << "(4) Какого музея нет на ФКН?\n";
    вывести << "1) Музей кубизма\n";
    вывести << "2) Музей вычислительной техники\n";
    вывести << "3) Музей программирования\n";
    вывести << "4) Музей Омск-ЭВМ\n\n";
    вывести << "Ваш ответ: ";
    целый ответ = ПолучитьОтвет();
    если(ответ == 1) {
        вывести << "Это верный ответ!\n\n";
        вернуть правда;
